<RelativeLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    tools:context="net.tsahaylu.www.ui.Activity_FavurlDetail" >

    
    <LinearLayout
            android:layout_width="match_parent"
   	 		android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_alignParentTop="true"
        >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/url"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:linksClickable="true"
        android:maxLines="1"
        android:textSize="15sp" />

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/avatarURL"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:focusable="false" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_vertical"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/nickname"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="3"
	            android:maxLines="1"
	            android:textSize="15sp" />

	        <TextView
	            android:id="@+id/sendtime"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:inputType="datetime"
	            android:maxLines="1"
	            android:textSize="15sp" />

	    </LinearLayout>
      	         
      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <TextView
            android:id="@+id/share"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:onClick="StartShareBy"
            android:textColor="@color/black"
            android:textSize="10sp" />

         <TextView
             android:id="@+id/share_title"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:clickable="false"
             android:gravity="center_horizontal"
             android:linksClickable="true"
             android:maxLines="1"
             android:text="@string/share_title"
             android:textSize="10sp" />
         
                 <TextView
                     android:id="@+id/fav"
                     android:layout_width="20dp"
                     android:layout_height="match_parent"
                     android:gravity="center_horizontal"
                     android:clickable="true"
                     android:maxLines="1"
                     android:onClick="StartFavBy"
                     android:textColor="@color/black"
                     android:textSize="10sp" />
                 
                         <TextView
                             android:id="@+id/fav_title"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:gravity="center_horizontal"
                             android:maxLines="1"
                             android:text="@string/fav_title"
                             android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
	
            <Button
                android:id="@+id/btn_Archive"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:onClick="ToggleArchive"
                android:text="Archive"
                android:textSize="10sp" />
                        
            <Button
                android:id="@+id/btn_fav"
                android:layout_width="50dp"
                android:layout_height="30dp"
                 android:textSize="10sp"
                 android:onClick="ToggleFav" 
                android:text="Fav" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:onClick="ToggleDelete"
                android:src="@android:drawable/ic_menu_delete"
                android:text="Delete"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="reply"
                android:onClick="ToggleReply" 
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:onClick="ToggleShare"
                android:src="@android:drawable/ic_menu_share"
                android:text="share"
                android:textSize="10sp" />
                        
        </LinearLayout>
        
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
            
      	   	<ListView  
	            android:id="@+id/list_view"  
	            android:descendantFocusability="blocksDescendants" 
	            android:layout_width="fill_parent"  
	            android:layout_height="fill_parent" >  
	        </ListView>
	          
   	</android.support.v4.widget.SwipeRefreshLayout>
   	
    </LinearLayout>
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/commentinput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:ems="10"
            android:hint="Add a commend"
            android:inputType="textMultiLine"
            android:onClick="CommentSubmit" >

        </EditText>


		<ImageButton
		    android:id="@+id/commentsubmit"
		    android:layout_width="48dp"
		    android:layout_height="40dp"
		    android:layout_gravity="right"
		    android:onClick="CommentSubmit"
		    android:src="@android:drawable/ic_menu_send"
		    android:textSize="10sp" />

    </LinearLayout>
</RelativeLayout >
